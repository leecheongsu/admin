doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(name='description' content='')
		meta(name='author' content='Insurobo')
		meta(name='generator' content='Insurobo')
		title 관리자
		link(rel='icon' href='/images/favicon.ico?v=20210101')
		link(rel='shortcut icon' href='/images/favicon.ico?v=20210101')

		block stylesheets
			link(rel='stylesheet' href='//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
			link(rel='stylesheet' href='//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css')
			link(rel='stylesheet' href='//cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css' integrity='sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l' crossorigin='anonymous')
			link(rel='stylesheet' href='//unpkg.com/bootstrap-table@1.18.2/dist/bootstrap-table.min.css')
			link(rel='stylesheet' href='/dist/bootstrap4-editable/css/bootstrap-editable.css')
			link(href='/css/admin.css' rel='stylesheet')

	body
		block header
			nav.navbar.navbar-dark.sticky-top.bg-dark.flex-md-nowrap.p-0.shadow
				a.navbar-brand.col-md-3.col-lg-2.mr-0.px-3(href='/admin/index') InsuRobo
				button.navbar-toggler.position-absolute.d-md-none.collapsed(type='button' data-toggle='collapse' data-target='#sidebarMenu' aria-controls='sidebarMenu' aria-expanded='false' aria-label='Toggle navigation')
					span.navbar-toggler-icon
				ul.navbar-nav.px-3
					li.nav-item.text-nowrap
						a.nav-link(href='/signout') #{session._user.name}
							i.fa.fa-sign-out.ml-3(aria-hidden='true')
		.container-fluid
			.row
				include menu
				main.col-md-9.ml-sm-auto.col-lg-10.px-md-4(role='main')
					block maincontents
		block javascripts
			script(src='//code.jquery.com/jquery-3.5.1.min.js')
			script(src='//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js')
			script(src='//cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js')
			script(src='//unpkg.com/bootstrap-table@1.18.2/dist/bootstrap-table.min.js')
			script(src='//unpkg.com/bootstrap-table@1.18.2/dist/extensions/editable/bootstrap-table-editable.min.js')
			script(src='/dist/bootstrap4-editable/js/bootstrap-editable.js')
			script(src='/js/admin.js')
